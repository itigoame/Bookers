<div class="box">

<h1>Books</h1>

<div class="inbox">
<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    </thead>

    <tbody>

    <% @bookers.each do |booker| %>

    <tr>
        <td><%= booker.title %></td>

        <td><%= booker.body %></td>

        <td><%= link_to 'show',book_path(booker.id) %></td>

        <td><%= link_to 'Edit',edit_book_path(booker.id) %></td>

        <td><%= link_to 'Destroy',book_path(booker.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
    </tbody>

</table>

<h2>New Book</h2>

  <% if @booker.errors.any? %>
  <div class="error-box">
    <h3> <%= @booker.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @booker.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <% end %>

  <%= form_with model: @booker do |f| %>

    <div class="field"><p>Title</p>
      <%= f.text_field :title %></div>

    <div class="area"><p>Body</p>
      <%= f.text_area :body %></div>

    <div class="submit"><%= f.submit'Create Book' %></div>

  <% end %>

</div>
</div>
